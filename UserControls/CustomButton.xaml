<UserControl x:Class="WindSpareParts.View.UserControls.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindSpareParts.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Button Name="btnCustomButton" Content="{Binding ButtonText}"
                Width="180" Height="60" Foreground="Green" Background="Black" Click="btnCustomButton_Click" />
    </Grid>
</UserControl>
